import React, { useEffect, useState } from 'react';
import openai from '../../utils/openai';


const ChatBot = () => {
  const [input, setInput] = useState('');
  const [messages, setMessages] = useState([]);

  const sendMessage = async () => {
    if (!input.trim()) return;
    const newMessages = [...messages, { text: input, user: 'user' }];
    setMessages(newMessages);
    setInput('');

    try {

    const query = "act like chatbot in ecommerse website and give as possible short within a line"+ input;
    // make an API call to openai and get movie results.
    const gptResults = await openai.chat.completions.create({
     messages: [{ role: 'user', content: query }],
     model: 'gpt-3.5-turbo',
   });
   
   //   const data = await gptResults.json();
      //  const result =gptResults.choices?.message?.content;
      // console.log(result)
      const botResponse  = gptResults.choices[0].message?.content;
      console.log(botResponse)
      const updatedMessages = [...newMessages, { text: botResponse, user: 'bot' }];
      setMessages(updatedMessages);
      console.log(messages);
    } catch (error) {
      console.error('Error sending message:', error);
      // Handle error gracefully
    }
  };

  const firstMessage = ()=>{
    setMessages('hii');
  };

//  useEffect(()=>{
//   firstMessage();
//  },[]);

  return (
    <div className="fixed bottom-5 right-5 w-80 h-96 bg-white border border-gray-300 rounded-lg shadow-lg overflow-hidden">
      {/* { <div className="h-full overflow-y-auto p-4">
        {messages?.map((message, index) => (
          <div
            key={index}
            className={`text-sm py-1 ${
              message.user === 'user' ? 'text-right' : 'text-left'
            }`}
          >
            {message.text}
          </div>
        ))}
      </div> } */}
      <div className="flex items-center justify-between border-t border-gray-300 p-4">
        <input
          type="text"
          value={input}
          onChange={(e) => setInput(e.target.value)}
         
          className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-300"
          placeholder="Type your message here..."
        />
        <button
          onClick={sendMessage}
          className="ml-2 px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600"
        >
          Send
        </button>
      </div>
    </div>
  );
};

export default ChatBot;
